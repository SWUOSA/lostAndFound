.CSline {
  height: 8vw;
  line-height: 8vw;
  font-size: 4vw;
  word-break: break-all;
  color: rgba(0, 0, 0, 0.5);
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent !important;
  opacity: 0;
  display: none;
  background: transparent;
}

.searchBox {
  display: flex;
  flex-direction: row;
  margin: 0 3vw;
  z-index: 20;
  position: relative;
  margin-top: 3vw;
}

.searchBar {
  border-radius: 4px;
  flex: 1;
  /* border: 1px solid rgba(0,0,0,0.7); */
  background-color: rgba(242, 242, 242);
  margin-right: 3vw;
  display: flex;
  flex-direction: row;
}

.searchBar>.iconfont {
  font-size: 5vw;
  margin-left: 3vw;
}

.customerIcon {
  font-size: 6vw;
  width: 7vw;
  text-align: center;
}

.recommendBox {
  margin: 3vw;
  display: flex;
  flex-direction: column;
}

.recommendIndex {
  display: flex;
  flex-direction: row;
}

.bottomLineBox {
  flex: 1;
  text-align: center;
  transition: 500ms;
}

.recommendLine {
  width: 100%;
  position: relative;
  height: 2px;
}

.lineItem {
  height: 2px;
  background-color: #4666c5;
  border-radius: 100px;
  position: absolute;
  transform: translateX(-50%);
  transition: 500ms;
  transition-timing-function: cubic-bezier(0.65, 0.05, 0.36, 1);
}

.contentBox {
  width: 100vw;
  overflow: hidden;
  position: relative;
}

.ccBox {
  position: absolute;
  left: 0;
  top: 0;
}

.contentItem {
  display: flex;
  flex-direction: row;
  padding: 3vw;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.imageBox {
  width: 30vw;
  min-width: 30vw;
  display: flex;
  height: 30vw;
  border-radius: 4px;
  background-color: rgba(0, 0, 0, 0.05);
}
.noImage{
  font-size: 6vw;
  margin: auto auto;
  color: rgba(0, 0, 0, 0.5);
}

.noImageShow {
  width: 30vw;
  height: 30vw;
  text-align: center;
  line-height: 30vw;
  background-color: rgba(0, 0, 0, 0.05);
  border-radius: 5px;
  color: rgba(0, 0, 0, 0.5);
}

.mainInfoBox {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.mainInfoBox>view {
  overflow: hidden;
}

.mainInfoBox view {
  font-size: 3.5vw;
  color: rgba(0, 0, 0, 0.5);
}

.mainInfoBox .mainTitle {
  font-size: 4vw;
  color: rgba(0, 0, 0, 0.8);
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.subTitle {
  font-size: 3.5vw;
  color: rgba(0, 0, 0, 0.5);
  margin-bottom: 4vw;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.mainInfoBox .tagItem {
  display: flex;
  flex-direction: row;
  padding: 0 0.5vw;
  line-height: 3.5vw;
  border-radius: 2px;
  height: 3.5vw;
  border: 1px solid rgba(0, 0, 0, 0.5);
}

.mainInfoBox .tagItem>text {
  line-height: 3.5vw;
  height: 3.5vw;
  font-size: 3vw;
}

.tagBox {
  display: flex;
  flex-direction: row;
  margin-top: auto;
  overflow: hidden;
}

.otherInfo {
  display: flex;
  flex-direction: row;
}

.hotInfo {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.stuInfo{
  display: flex;
  flex-direction: row;
  align-items: center;
}


.hotNum {
  width: 16vw;
}

.hotShare {
  width: 16vw;
}

.mainName {
  width: fit-content;

  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.mainInfoBox .lineOne {
  display: inline-block;
  margin: auto 0 auto 1vw;
  padding: 0 0.5vw;
  font-size: 2.5vw;
  line-height: 3.5vw;
  border-radius: 2px;
  height: 3.5vw;
  border: 1px solid rgba(0, 0, 0, 0.5);
}

.timeInfo {
  width: fit-content !important;
}


/* 操作区域 */
.userDisplay {
  backdrop-filter: blur(5px);
  background-color: rgba(255,255,255,0.5);
  border: 1px solid rgba(0,0,0,0.1);
  color: #4666c5;
  height: 80rpx;
  width: 80rpx;
  border-radius: 40rpx;
  position: fixed;
  bottom: 400rpx;
  right: 5%;
  bottom: 5%;
  z-index: 100;
  font-size: 50rpx;
  text-align: center;
  line-height: 80rpx;
  z-index: 1;
}

/* 两个页面转换 */

swiper-item {
  height: 100%;
}

.swiperBox {
  transition: 500ms;
  height: 100%;
}

.swiperItem {
  height: 100%;
  overflow: scroll;
}

.swiperBoxAdd {
  transition: 500ms;
  height: 100%;
}

/* 筛选展示信息卡片 */
.showList {
  height: fit-content;
  color: #fff;
  display: flex;
  flex-direction: row;
  position: relative;
  border-radius: 4vw;
  overflow: hidden;
  height: fit-content;
  margin: auto 20rpx;
}

.showListLeftBox {
  display: flex;
  flex-direction: row;
  overflow-x: scroll;
}

.showListLeft {
  margin: auto 0;
  height: 40rpx;
  font-size: 26rpx;
  line-height: 40rpx;
  padding: 0 20rpx;
  border-radius: 20rpx;
  background-color: rgba(0, 0, 0, 0.2);
  color: rgba(255, 255, 255, 0.8);
  margin-right: 10rpx;
}

.showListMid {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.showListRight {
  margin-left: auto;
  font-size: 50rpx;
}

.showChooseList {
  position: absolute;
  z-index: 3;
  background-color: rgba(242, 242, 242);
  display: flex;
  flex-direction: column;
  width: 84vw;
  border-bottom-left-radius: 4px;
  border-bottom-right-radius: 4px;
  color: #fff;
  margin-left: 3vw;
  height: 300px;
  transition: 500ms;
  overflow: hidden;
  transform: translateY(-4vw);
}

.hideChooseList {
  height: 0;
  transition: 500ms;
}

.chooseItem {
  display: inline-block;
  position: relative;
  width: 100%;
  padding: 0 3vw;
}

.searchInfo{
  float: right;
  height: 6vw;
  font-size: 3.5vw;
  line-height: 6vw;
  padding: 0 4vw;
  border-radius: 100vw;
  background-color: #0ab68b;
}
.orgLevelTitle{
  color: #4666c5;
  margin-right: 3vw;
}

.chooseItem>input{
  flex: 1; 
  color: rgba(0, 0, 0, 0.5);
  background-color: rgba(0, 0, 0, 0.1);
  padding: 0 3vw;
  height: 40rpx;
  font-size: 26rpx;
  line-height: 40rpx;
}

.showListLeft,
.chooseItem>view {
  display: inline-block;
  width: fit-content;
}

.orgLevelitem {
  margin: 10rpx 10rpx;
  height: 40rpx;
  font-size: 26rpx;
  line-height: 40rpx;
  padding: 0 20rpx;
  border-radius: 20rpx; 
  color: rgba(0, 0, 0, 0.5);
  background-color: rgba(0, 0, 0, 0.1);
}

.showListLeft,
.orgLevelitemChoosed {
  background-color: #4666c5;
  color: #fff;
  min-width: fit-content;
}

.showHelpBox {
  position: relative;
  height: 100rpx;
  width: 100%;
}


.readOnly_containerS {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 2;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  display: flex;
}